<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels ="clr-namespace:SFAR.ViewModels;assembly=SFAR.ViewModels"
             xmlns:models ="clr-namespace:SFAR.Models.Devices;assembly=SFAR.Models"
             x:Class="Smart_Fan_App_Regular.MainPage"
             x:DataType="viewModels:DiscoverPageViewModel">

    <ListView ItemsSource="{Binding Devices}" ItemSelected="ListView_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate 
                x:DataType="models:SmartFanBLEDevice">
                <ViewCell>
                    <VerticalStackLayout>
                        <Label Grid.Row="0"
                               Text="{Binding Name}"
                               FontSize="16"/>
                        <Label
                               Text="{Binding Address}" 
                               FontAttributes="Bold"
                               FontSize="10"/>
                    </VerticalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
       
    </ListView>

    <!--<Grid>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Button Text="Discover" Command="{Binding Command}"></Button>
        </VerticalStackLayout>
    </Grid>-->

</ContentPage>
